@model ItsaWeb.Models.RegisterUserViewModel

@{
    ViewBag.Title = "Register User";
    Layout = "~/Views/Shared/_LayoutNoSession.cshtml";
}

<h2>@ViewBag.Title</h2>

<div id="session-index">
    <div id="login-page-container">
        <div id="login-page-liner">
            <div id="introduction-container">
                <div id="login-container">

                    <h2>Register</h2>
                    @using (Html.BeginForm("Create", "User"))
                    {
                    @*    @Html.LabelFor(m => m.UserName) @: @Html.EditorFor(m => m.UserName, new{autocomplete="off"}) @Html.ValidationMessageFor(m => m.UserName, "*")*@
